import time
import socket
import pyfiglet

# Print the banner
line_banner = pyfiglet.figlet_format("CYB333 PROJECT")
print(line_banner)

# Create a socket
s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

# Get the target from the user
target = input('Enter the website or IP address to scan (e.g., "127.0.0.1"): ')

# Resolve the target's IP address
target_ip = socket.gethostbyname(target)
print('Scanning target:', target_ip)

# Define the function for scanning ports
def port_scan(port):
    try:
        s.connect((target_ip, port))
        return True
    except:
        return False

# Perform port scanning
start = time.time()
for port in range(7):
    if port_scan(port):
        print(f'Port {port} is open')
    else:
        print(f'Port {port} is closed')
end = time.time()

# Print the time taken for scanning
print(f'Time taken: {end - start:.2f} seconds')

# Print a closing message
line_banner1 = pyfiglet.figlet_format("Merry Christmas and Happy New Year!!")
print(line_banner1)
